<header>
  <h2><span class="logo">[ </span>MY<span class="logo"> ]</span> Projects</h2>
</header>
<hr>

<main>
  <h2 class="title-capt"><%= project.name %></h2>
  <div class="row  ">
    <div class="col-sm-6 col-md-6 col-lg-6">
      <form class="form-inline" method="POST" action="/projects/<%= project.id %>"> 
        <select class="form-control" name="category" id="category">
          <% categories.forEach(function(category){%> 
            <option value="<%= category.name %>"><%= category.name %></option>
            <% }) %>    
          </select>
          <button type="submit" class="submit btn btn-danger"> Add Category</button>
        </form>
    </div>
  
    <div class="col-sm-6 col-md-6 col-lg-6">
      <form method="POST" action="/projects/<%= project.id %>/?_method=DELETE">
        <button class="btn btn-danger"><a id="btn-text" href="/projects/edit/<%= project.id %> ">Edit</a> </button>
        <button type="submit" class="btn btn-danger"> Delete </button>  
      </form>
    </div> 
      
      
  </div>

  <div class="well one-project">
    
    <p><%= project.description %></p>
      
    <a class="btn btn-danger" id="btn-text" href="<%= project.githubLink %>" target="_blank">
      <i class="fa fa-github" aria-hidden="true"></i>
      Github Link
    </a>
    
    <a class="btn btn-danger" id="btn-text" href="<%= project.deployLink %>" target="_blank">
      <i class="fa fa-globe" aria-hidden="true"></i>
      Deployed Link
    </a>
    
    
        
    <hr />
    <a href="/">&larr; Back Home</a>
  </div>
</main>